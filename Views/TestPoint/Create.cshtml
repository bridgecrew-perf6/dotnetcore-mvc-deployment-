@model dacon_exam.Models.TestPoint


<!DOCTYPE html>
<html lang="en">
<head>
          <meta charset="UTF-8">
          <meta http-equiv="X-UA-Compatible" content="IE=edge">
          <meta name="viewport" content="width=device-width, initial-scale=1.0">
          <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
          <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/css/bootstrap-datepicker.min.css">
          <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
          <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
          <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
          <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/js/bootstrap-datepicker.min.js"></script>
</head>
<body>

<br>  <br>  <br>  <br>  <br>  <br>  <br> 

          <div class="container my-10">
                    <form asp-action="Create" asp-area="TestPoint" asp-route-id2="@ViewBag.data" method="post">
                              <div class="card">
                                        <div class="card-body">
                                                  <h3 align="center">ADD TEST POINT </h3>
                                            
                                        <div class="row">
                                                 
                                                  <div class="form-group">
                                                            <input asp-for="tp_number" type="number"  class="form-control" 
                                                            placeholder="Tp number" required>
                                                  </div>
                                                  
                                                  
                                                  <div class="form-group">
                                                            <input asp-for="tp_description" type="number"  class="form-control" 
                                                            placeholder="Tp description" required>
                                                  </div>


                                                  <div class="form-group">
                                                            <input asp-for="note" type="text" 
                                                            class="form-control" placeholder="Note" required>
                                                  </div>

                                                  
                                                  <div class="form-group">
                                                  <div asp-validation-summary="All" class="text-danger"></div>
                                                  </div>
                                                            
                                                  <center>
                                                        <button type="submit" class="btn btn-primary">เพิ่มข้อมูล</button>
                                                            <a asp-action="Index" asp-controller="TestPoint" asp-route-id ="@ViewBag.cml_id"  class="btn btn-secondary">ยกเลิก</a>
                                                  </center>                        
                                                  </div>
                                        </div>
                    </form>
         
                    </div>
          </body>

<script type="text/javascript">
        $(function() {
            $.fn.datepicker.defaults.format = "dd/mm/yyyy";
            $('#datepicker').datepicker();
            
        });
    </script>
</html>