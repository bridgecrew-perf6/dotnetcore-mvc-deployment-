@model dacon_exam.Models.Thickness


<!DOCTYPE html>
<html lang="en">
<head>
          <meta charset="UTF-8">
          <meta http-equiv="X-UA-Compatible" content="IE=edge">
          <meta name="viewport" content="width=device-width, initial-scale=1.0">
          <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
          <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/css/bootstrap-datepicker.min.css">
          <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
          <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
          <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
          <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/js/bootstrap-datepicker.min.js"></script>
</head>
<body>
<br>  <br>  <br>  <br>  <br>  <br>  <br> 

<div class="container">
    <form asp-action="Create" asp-area="Thickness" asp-route-id2="@ViewBag.tp_id" asp-route-id3 ="@ViewBag.data" method="post">
        <div class="row">
            <div class="card">
                <div class="card-body">
                <div class="col-lg-12">
                    <h3 align="center">ADD THICKNESS</h3>
                    
                    <div class="form-group">
                        <label>Inspection date</label>
                        <div class="input-group date" id="datepicker" data-provide="datepicker" data-date-format="yyyy/mm/dd">
                                <input asp-for="inspection_date" type="text" class="form-control" placeholder="Inservice date"><span class="input-group-append">
                                <span class="input-group-text bg-white d-block"><i class="fa fa-calendar"></i></span></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <label>Actual Thickness</label>
                        <input asp-for="actual_thickness" type="number" step="any" class="form-control" placeholder="actual thickness">
                    </div>

                  
                    @* <input type="hidden" asp-for="Student_createdDate" /> *@
                    <div class="form-group">
                        <div asp-validation-summary="All" class="text-danger"></div>
                    </div>
                    
                        <center>
                            <button type="submit" class="btn btn-primary">เพิ่มข้อมูล</button>
                            <a asp-action="Index" asp-controller="Thickness" asp-route-id="@ViewBag.cml_id" class="btn btn-secondary">ยกเลิก</a>
                        </center>
                    </div>
                </div>
            </div>
          </div>
     </form>
   </div>
</body>

<script type="text/javascript">
        $(function() {
            $.fn.datepicker.defaults.format = "dd/mm/yyyy";
            $('#datepicker').datepicker();
            
        });

}
    </script>
</html>